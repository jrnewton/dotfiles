[alias]
; use -p for a patch diff
; use --state for files changed
; use --graph for a graph of branches
; see also https://coderwall.com/p/euwpig/a-better-git-log
lg="log --oneline --decorate"
; review incoming / outgoing changes
review-pull="!git fetch && git lg ..@{u}"
review-push="!git fetch && git lg @{u}.."
